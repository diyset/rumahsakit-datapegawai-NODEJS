                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Selamat Datang Karyawan</h3>
                                <p>Masukan username dan password anda :</p>
                                <p style="color: red; font-style: oblique"><%= message%></p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-lock"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <form role="form" action="/signin" method="post" id="signin" name="signin" class="login-form">
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Username</label>
                                    <input type="text" name="email" placeholder="Username/NIP" class="form-username form-control" id="email" >
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-password">Password</label>
                                    <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="password"/>
                                </div>
                                <button type="submit" class="btn btn-info">Masuk!</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 social-login">
                        <h3>Belum Registrasi? Silahkan <a href="/signup" class="btn-info"> Registrasi</a></h3>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Javascript -->
    <script src="assets/js/jquery-1.11.1.min.js"></script>
